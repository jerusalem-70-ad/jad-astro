---
import PageLayout from "../layouts/page-layout.astro";
import { getCollection } from "astro:content"
const collection = await getCollection("works")


---

<PageLayout>
    <div class="mx-auto w-full max-w-screen-xl px-16 py-4">
		<div>
			<h1 class="text-2xl font-semibold text-brandBrown py-4">Works:</h1>
           
            <ul class="md:columns-3 sm:columns-2 gap-8">
                
                {collection
                    .sort((a, b) => a.data.name.localeCompare(b.data.name)) // sort alphabetically based on property 'name'
                    .map((work) => {
                        return (
                            <li class="list-disc">                     
                                <a href=`works/${work.data.jad_id}` class="hover:text-brandRed font-medium">
                                    <span class="italic">{work.data.name}</span>
                                </a>                                                        
                            </li>)
                })}
            </ul>            
		</div>
	</div>
</PageLayout> 