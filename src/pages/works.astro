---
import PageLayout from "../layouts/page-layout.astro";
import works from "../content/data/works.json";

const worksValues = Object.values(works);
---

<PageLayout>
    <div class="mx-auto w-full max-w-screen-xl px-16 py-4">
		<div>
			<h1 class="text-2xl font-semibold text-brandBrown py-4">Works:</h1>
            <table class="border border-red-600 w-3/4 text-left text-brandBrown dark:text-brandPaleWhite">
                <thead class="text-xs text-brandBrown uppercase bg-brandPaleWhite dark:bg-brandBrown dark:text-brandPaleWhite">
                    <tr>
                        <th class="px-4 py-3">Title</th>
                        <th>Author</th>
                        <th>Text</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="border-b dark:border-gray-700">
                        <td>Text</td>
                    </tr>
                </tbody>
             
            </table>
            
            <ul>
                    {Object.values(worksValues).map((work) => (
                      <li>
                        <a href=`/works/${work.jad_id}`>{work.name}</a>
                        </li>
                    ))}
                  </ul>
               
                   
		</div>
	</div>
</PageLayout> 