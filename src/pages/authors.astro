---
import PageLayout from "@/layouts/page-layout.astro";
import TableHead from "@/components/table-head.astro";
import TabulatorTable from "@/components/tabulator-table.jsx";
import { authorsTableConfig } from "@/lib/tabulator-table-configs.js";
import authorsjson from "@/content/data/authors.json";

// Transform data and prepare columns for Tabulator Table
const authors = Object.values(authorsjson);
const tableData = authorsTableConfig.transformData(authors);
const columns = authorsTableConfig.getColumns();
const rowClickConfig = authorsTableConfig.getRowClickConfig;
---

<PageLayout title="Authors">
  <TableHead title="Authors">
    <TabulatorTable
      client:only="react"
      data={tableData}
      columns={columns}
      tableId="authors-table"
      options={{
        paginationSize: 25,
        responsiveLayout: "collapse",
        initialSort: [{ column: "aut_name", dir: "asc" }],
      }}
      downloadTitle="jad_authors"
      rowClickConfig={rowClickConfig}
    />
  </TableHead>
</PageLayout>
