---
import PageLayout from "@/layouts/page-layout.astro";

import TableHead from "@/components/table-head.astro";
---

<PageLayout title="Authors">
  <TableHead title="Authors" />

  <script>
    import { setupTableActions } from "@/lib/table-actions";
    import { TabulatorFull as Tabulator } from "tabulator-tables";
    import "tabulator-tables/dist/css/tabulator_semanticui.min.css";
    import data from "@/content/data/authors.json";
    import { jsonpathLookup } from "@/lib/tabulator-utils.js";

    var tabledata = data;

    var table = new Tabulator("#tabulator-table", {
      headerFilterLiveFilterDelay: 600,
      height: 900,
      data: tabledata,
      layout: "fitColumns",
      responsiveLayout: "collapse",
      rowHeader: {
        formatter: "responsiveCollapse",
        width: 30,
        minWidth: 30,
        hozAlign: "center",
        resizable: false,
        headerSort: false,
      },
      columns: [
        {
          title: "Name",
          field: "name",
          minWidth: 200,
          resizable: true,
          headerFilter: "input",
          // Custom filter: checks both name and nameVariants
          headerFilterFunc: function (headerValue, rowValue, rowData) {
            if (!headerValue) return true;
            const search = headerValue.toLowerCase();
            const nameMatch = rowData.name?.toLowerCase().includes(search);
            const variantsMatch = Array.isArray(rowData.nameVariants)
              ? rowData.nameVariants.some((variant: string) =>
                  variant.toLowerCase().includes(search)
                )
              : false;
            return nameMatch || variantsMatch;
          },
          // Formatter: just show the main name
          formatter: function (cell) {
            return cell.getValue();
          },
        },

        {
          title: "GND",
          resizable: true,
          field: "gnd_url",
          minWidth: 200,
          headerFilter: "input",
          formatter: "link",
        },
        {
          title: "Works",
          resizable: true,
          field: "related__works",
          minWidth: 200,
          mutator: jsonpathLookup,
          mutatorParams: {
            path: "$[*].view_label",
            separator: "| ",
          },
          headerFilter: "input",
          formatter: "textarea",
        },
      ],
    });

    setupTableActions(table, "authors");
  </script>
</PageLayout>
