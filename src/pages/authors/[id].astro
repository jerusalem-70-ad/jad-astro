---
import PageLayout from "../../layouts/page-layout.astro";
import authors from "@data/authors.json";
import { Icon } from "astro-icon/components";
import NavLink from "@components/nav-link.astro";
export async function getStaticPaths() {
    const paths = Object.values(authors).map((author) => ({
        params: { id: author.jad_id },
        props: { data: author },
    }));

    // Return the array of paths
    return paths;
}

const { data: author } = Astro.props;
---

<PageLayout>
    <div>
        <div
            class="border-2 rounded-sm border-brandBrown bg-brandRose my-10 grid p-5 w-3/4 mx-auto"
        >
            <h1 class="text-xl py-3 mx-auto font-medium">{author.name}</h1>
            <dl
                class="grid grid-cols-[1fr_7fr] text-sm md:leading-7 md:text-base"
            >
                <dt class="font-semibold border-r border-gray-300 pr-5">
                    GND:
                </dt>
                <dd class="pl-5">
                    {
                        author.gnd_url.length > 0 ? (
                            <NavLink href={author.gnd_url}>
                                {author.gnd_url.split("/").at(-1)}
                                <Icon
                                    class="inline-flex align-top"
                                    aria-hidden="true"
                                    name="lucide:external-link"
                                />
                            </NavLink>
                        ) : (
                            "N/A"
                        )
                    }
                </dd>

                <dt class="font-semibold border-r border-gray-300 pr-5">
                    Works:
                </dt>
                <dd class="pl-5">
                    {
                        author.related__works.length > 0 ? (
                            <ul>
                                {author.related__works.map((work) => (
                                    <li>
                                        <NavLink href={`/works/${work.jad_id}`}>
                                            {work.view_label}
                                        </NavLink>
                                    </li>
                                ))}
                            </ul>
                        ) : (
                            "N/A"
                        )
                    }
                </dd>
            </dl>
        </div>
        <div class="my-10 flex p-5 w-3/4 mx-auto justify-between">
            <NavLink href=`/authors/${author.prev.id}`>
                <Icon class="size-20" name="lucide:circle-arrow-left" />
            </NavLink>

            <NavLink href=`/authors/${author.next.id}`>
                <Icon class="size-20" name="lucide:circle-arrow-right" />
            </NavLink>
        </div>
    </div>
</PageLayout>
