---
import Layout from "@/layouts/page-layout.astro";
import "instantsearch.css/themes/satellite.css";
---

<Layout>
    <main class="md:w-3/4 mx-auto py-6">
        <h2 class="text-3xl font-bold text-brandBrown mb-6">Advanced Search</h2>

        <div class="space-y-6">
            <!-- Search Input and Stats -->
            <div class="bg-gray-100 p-4 rounded-lg shadow-sm">
                <div id="searchbox" class="mb-4"></div>
                <div class="flex items-center justify-between">
                    <div id="stats-container" class="text-sm text-gray-600">
                    </div>
                    <div id="current-refinements" class="text-sm text-gray-600">
                    </div>
                    <div id="clear-refinements"></div>
                </div>
            </div>

            <!-- Refinements and Results -->
            <div class="grid md:grid-cols-[1fr_3fr] gap-6">
                <!-- Refinements Section -->
                <aside class="bg-gray-50 p-4 rounded-lg shadow-sm space-y-6">
                    <div id="refinement-list-author" class="space-y-2"></div>
                    <div id="refinement-list-work" class="space-y-2"></div>
                    <div id="refinement-list-workdate" class="space-y-2"></div>
                    <div id="refinement-list-manuscript" class="space-y-2">
                    </div>
                    <div id="refinement-list-context" class="space-y-2"></div>
                    <div id="refinement-list-clusters" class="space-y-2"></div>
                    <div id="refinement-list-keywords" class="space-y-2"></div>
                    <div id="refinement-list-liturgical" class="space-y-2">
                    </div>
                </aside>

                <!-- Results Section -->
                <section>
                    <div id="hits" class="bg-white p-4 rounded-lg shadow-sm">
                    </div>
                    <div id="pagination" class="mt-4 flex justify-center"></div>
                </section>
            </div>
        </div>
    </main>
</Layout>

<script src="@/lib/advanced-search.js"></script>
