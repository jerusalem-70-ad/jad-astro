---
import PageLayout from "@/layouts/page-layout.astro";
import TableHead from "@/components/table-head.astro";
import TabulatorTable from "@/components/tabulator-table.jsx";
import { biblrefsTableConfig } from "@/lib/tabulator-table-configs.js";
import biblical_referencesjson from "@/content/data/biblical_references.json";


// Transform data and prepare columns for Tabulator Table
const biblical_references = Object.values(biblical_referencesjson);
const tableData = biblrefsTableConfig.transformData(biblical_references);
const columns = biblrefsTableConfig.getColumns();
const rowClickConfig = biblrefsTableConfig.getRowClickConfig;
---

<PageLayout title="Biblical References">
  <TableHead title="Biblical References">
    <TabulatorTable
      client:only="react"
      data={tableData}
      columns={columns}
      tableId="biblical-references-table"
      options={{
        paginationSize: 25,
        responsiveLayout: "collapse",
      }}
      downloadTitle="jad_biblical_references"
      rowClickConfig={rowClickConfig}
    />
  </TableHead>
</PageLayout>



