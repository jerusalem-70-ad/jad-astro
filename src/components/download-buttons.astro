---
import { Icon } from "astro-icon/components";
---

<div class="hidden gap-3 md:flex py-10">
  <button
    class="border border-brand-800 rounded-md py-2 px-4 bg-brand-800 text-brand-100 hover:bg-brand-100 hover:text-brand-800 transition"
    id="download-csv"
    >CSV <Icon
      aria-hidden="true"
      name="lucide:download"
      class="inline-flex"
    /></button
  >
  <button
    class="border border-brand-800 rounded-md py-2 px-4 bg-brand-800 text-brand-100 hover:bg-brand-100 hover:text-brand-800 transition"
    id="download-json"
    >JSON <Icon
      aria-hidden="true"
      name="lucide:download"
      class="inline-flex"
    /></button
  >
  <button
    class="border border-brand-800 rounded-md py-2 px-4 bg-brand-800 text-brand-100 hover:bg-brand-100 hover:text-brand-800 transition"
    id="download-html"
    >HTML <Icon
      aria-hidden="true"
      name="lucide:download"
      class="inline-flex"
    /></button
  >
</div>
