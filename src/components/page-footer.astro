---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import imafoLogo from "../../public/assets/images/imafo_logo_kurz.png";
import fwfLogo from "../../public/assets/images/fwf-logo.png";
import acdhLogo from "../../public/assets/images/acdh-ch-logo-light.svg";
import NavLink from "./nav-link.astro";
---

<footer class="bg-brandRose text-brandBrown">
    <div
        class="mx-auto grid w-full max-w-screen-lg gap-y-6 px-4 py-12 text-[#444]"
    >
        <div
            class="flex w-full items-center gap-x-1.5 border-b border-[#00000026] pb-4"
        >
            <Icon
                aria-hidden="true"
                class="size-4.5"
                name="lucide:message-circle"
            />
            <span class="text-sm font-medium">Contact:</span>
        </div>

        <div class="mx-auto grid md:flex gap-4">
            <section>
                <span class="font-semibold">Research institution:</span>
                <div class="md:grid grid-cols-[2fr_3fr] gap-4 m-2">
                    <a
                        class="hidden md:inline-flex py-1"
                        href="https://www.oeaw.ac.at/en/imafo/home"
                    >
                        <Image
                            src={imafoLogo}
                            alt=""
                            class="h-auto w-60 m-auto"
                        />
                        <span class="sr-only"
                            >Institute for Mediaeval Research (IMAFO)</span
                        >
                    </a>
                    <p>
                        <NavLink
                            class="font-semibold"
                            href="https://www.oeaw.ac.at/en/imafo/home"
                            >Institute for Mediaeval Research (IMAFO)</NavLink
                        >
                        <br /> Austrian Academy of Sciences

                        <br /> Dominikanerbastei 16, 1010 Vienna
                        <br />
                        E:
                        <a
                            class="underline decoration-dotted underline-offset-4 hover:no-underline"
                            href="mailto:imafo.office@oeaw.ac.at"
                        >
                            imafo@oeaw.ac.at
                        </a>
                    </p>
                </div>
            </section>

            <section>
                <span class="font-semibold">Technical implementation:</span>
                <div class="flex gap-4 items-start">
                    <a
                        class="hidden md:inline-flex mt-4"
                        href="https://www.oeaw.ac.at/acdh/"
                    >
                        <Image src={acdhLogo} alt="" />
                        <span class="sr-only">
                            Austrian Centre for Digital Humanities and Cultural
                            Heritage
                        </span>
                    </a>
                    <div class="grid gap-2 m-2">
                        <p>
                            <NavLink
                                class="font-semibold"
                                href="https://www.oeaw.ac.at/acdh/"
                                >ACDH-CH Austrian Centre for Digital Humanities
                                and Cultural Heritage</NavLink
                            >
                            <br />
                            Austrian Academy of Sciences
                            <br />
                            Bäckerstraße 13, 1010 Vienna
                            <br />
                            T:
                            <a
                                class="underline decoration-dotted underline-offset-4 hover:no-underline"
                                href="tel:+43 1 51581-2200"
                            >
                                +43 1 51581-2200
                            </a>
                            <br />
                            E:
                            <a
                                class="underline decoration-dotted underline-offset-4 hover:no-underline"
                                href="mailto:acdh-ch@oeaw.ac.at"
                                >acdh-ch@oeaw.ac.at</a
                            >
                        </p>
                    </div>
                </div>
            </section>

            <section>
                <span class="font-semibold">Funding:</span>

                <a href="https://www.fwf.ac.at/forschungsradar/10.55776/ESP678">
                    <Image
                        src={fwfLogo}
                        alt="Österreichischer Wissenschaftsfonds"
                        class="h-auto w-60 m-auto py-10"
                    />
                </a>
            </section>
        </div>
    </div>
    <div class="flex justify-center p-3 bg-brandBrown text-brandPaleWhite">
        <p>
            © Copyright OEAW | <a
                class="underline decoration-dotted underline-offset-4 hover:no-underline"
                href="imprint</NavLink>">Imprint</a
            >
        </p>
    </div>
    <div class="bg-brandBrown text-brandPaleWhite py-2 text-center">
        &copy; Copyright OEAW |
        <NavLink
            class="underline decoration-dotted underline-offset-4 hover:no-underline"
            href="/imprint"
        >
            Imprint
        </NavLink>
        |
        <NavLink
            class="underline decoration-dotted underline-offset-4 hover:no-underline"
            href="https://github.com/jerusalem-70-ad/jad-astro"
        >
            Code Repo
            <Icon class="inline-flex" aria-hidden="true" name="lucide:github" />
        </NavLink>
    </div>
</footer>
