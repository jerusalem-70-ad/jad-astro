---
import DownloadButtons from "@/components/download-buttons.astro";
interface Props {
  title: string;
  definition?: string;
}

const { title } = Astro.props;
---

<div class="mx-auto md:w-4/5 w-screen px-2 md:mt-10">
  <h1
    class="text-2xl font-semibold text-brand-800 py-10 flex items-center gap-1"
  >
    {title}
  </h1>
  <slot />
  <div class="flex justify-between">
    <div class="text-brand-600 text-xl">
      Showing
      <span id="counter1"></span> from a total of
      <span id="counter2"></span> entries
    </div>
    <DownloadButtons />
  </div>
  <div class="text-sm md:text-base">
    <div id="tabulator-table"></div>
  </div>
</div>
