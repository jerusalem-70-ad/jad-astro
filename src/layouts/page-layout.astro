---
import PageFooter from "../components/page-footer.astro";
import PageHeader from "../components/page-header.astro";
interface Props {
	title?: string;
}

const { title = "Medieval Reception of the Roman Conquest of Jerusalem" } =
	Astro.props;
---

<html lang="en" class="h-full">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<!-- // Disable indexing -->
		<meta name="robots" content="noindex, nofollow" />
		<title>J·AD 70 · {title}</title>
	</head>
	<body class="min-h-screen grid grid-rows-[auto_1fr_auto] bg-brandPaleWhite">
		<PageHeader />
		<slot />
		<PageFooter />
	</body>
</html>
